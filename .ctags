--recurse=yes
--append=yes

--langdef=Sass
--langmap=Sass:.sass
--regex-Sass=/^[ \t]([#.][a-zA-Z_0-9]+)[ \t]*$/\1/f,function/

--langmap=Ruby:+(Rakefile)

--langdef=Markdown
--langmap=Markdown:.md
--regex-Markdown=/^#+[ \t]*([^#]+)/\1/f,function/

--exclude=.git
--exclude=vendor
--exclude=node_modules
--exclude=log
