# body
'body':
  'ctrl-m': 'core:confirm'
  'ctrl-j': 'core:cancel'
  'cmd-o': 'unset!'

'atom-text-editor:not([mini])':
  'ctrl-k': 'snippets:expand'

'atom-text-editor':
  # snippets
  'ctrl-k': 'autocomplete-plus:confirm'
  # dash
  'cmd-\'': 'dash:shortcut'
  'cmd-ctrl-\'': 'dash:shortcut-alt'

'.platform-darwin':
  # tree-view
  'cmd-;': 'tree-view:toggle-focus'
# select-list
'.select-list atom-text-editor[mini]':
  'ctrl-m': 'core:confirm'


'.platform-darwin atom-workspace':
  # advanced-open-file
  'cmd-o': 'advanced-open-file:toggle'

# autocomplete
'atom-text-editor:not(mini) .autocomplete-plus.autocomplete-suggestion-list':
  'up': 'unset!'
  'down': 'unset!'
  'ctrl-p': 'autocomplete-plus:select-previous'
  'ctrl-n': 'autocomplete-plus:select-next'


# project-manager
'.project-manager input':
  'ctrl-m': 'core:confirm'

# tree-view
'.platform-darwin .tree-view':
  'y y': 'tree-view:copy'
  'p p': 'tree-view:paste'
'.tree-view':
  'd d': 'tree-view:remove'
  'g g': 'core:move-to-top'
  'shift-g': 'core:move-to-bottom'
  'ctrl-m': 'tree-view:open-selected-entry'
'.tree-view-dialog atom-text-editor[mini]':
  'ctrl-m': 'core:confirm'

# vim-mode
'atom-text-editor.vim-mode':
  'ctrl-j': 'vim-mode:reset-normal-mode'
  'ctrl-j': 'vim-mode:activate-normal-mode'

# vim-mode (normal)
'atom-text-editor.vim-mode.normal-mode':
  # bracket-matcher
  'tab': 'bracket-matcher:go-to-matching-bracket'
  # vim-mode-clipboard-plus
  'ctrl-p': 'clipboard-plus:toggle'

# vim-mode (insert)
'atom-text-editor.vim-mode.insert-mode':
  'ctrl-m': 'editor:newline'
  'ctrl-n': 'snippets:next-tab-stop'
  'ctrl-p': 'snippets:previous-tab-stop'
  'ctrl-t': 'editor:indent'

# vim-mode(visual-mode)
'atom-text-editor.vim-mode.visual-mode':
  's': 'unset!'
  'ctrl-j': 'vim-mode-visual-block:escape'
